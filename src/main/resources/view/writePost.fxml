<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<AnchorPane xmlns="http://javafx.com/javafx"
          fx:controller="com.socialapp.socialapp.controller.postController"
          xmlns:fx="http://javafx.com/fxml" prefHeight="500"
          prefWidth="500">

    <Label text="Enter your text here" AnchorPane.topAnchor="150" AnchorPane.leftAnchor="200"
           style=" -fx-text-fill: #440941; -fx-font-size: 20px"/>
    <TextArea fx:id="postText" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="180"
              style="-fx-background-color: #440941; -fx-selection-bar:#440941; -fx-text-fill: #440941; -fx-font-size: 14px"/>
    <Button onAction="#handlePost" text="Post it!" AnchorPane.bottomAnchor="40" AnchorPane.rightAnchor="50"
            style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
    <Button onAction="#handleLoadMenu" text="Go Back" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="50"
            style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
</AnchorPane>

