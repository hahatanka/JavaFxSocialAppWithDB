<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<GridPane xmlns="http://javafx.com/javafx"
          fx:controller="com.socialapp.socialapp.controller.Friends"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
          hgap="10" vgap="10">

    <Label text="Your Friends" GridPane.rowIndex="4" GridPane.columnIndex="5"
style=" -fx-text-fill: purple; -fx-font-size: 28px"/>
    <ListView fx:id="listView" GridPane.columnIndex="5" GridPane.rowIndex="6" maxHeight="200"
              style="-fx-background-color: #440941; -fx-selection-bar:#440941; -fx-text-fill: white; -fx-font-size: 14px"/>
    <Button onAction="#handleMessenger" text="Open Messenger" GridPane.rowIndex="7" GridPane.columnIndex="3"
     style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
    <Button onAction="#handleViewProfile" text="View Profile" GridPane.rowIndex="7" GridPane.columnIndex="2"
            style="-fx-background-color: purple; -fx-text-fill: white; -fx-font-size: 14px"/>
    <Button onAction="#handleLoadMenu" text="Go Back" GridPane.rowIndex="8" GridPane.columnIndex="2"
            style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
</GridPane>



