<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            fx:controller="com.socialapp.socialapp.controller.Friends"
            xmlns:fx="http://javafx.com/fxml" prefHeight="500"
            prefWidth="500">

    <Label text="Your Friends" AnchorPane.topAnchor="80" AnchorPane.rightAnchor="210"
style=" -fx-text-fill: purple; -fx-font-size: 28px"/>
    <ListView fx:id="listView" AnchorPane.topAnchor="200" AnchorPane.rightAnchor="80" maxHeight="200"
              style="-fx-background-color: #440941; -fx-selection-bar:#440941; -fx-text-fill: white; -fx-font-size: 14px"/>
    <ImageView fx:id="myImageview" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="50"/>
    <Button onAction="#handleMessenger" text="Open Messenger" AnchorPane.bottomAnchor="50" AnchorPane.rightAnchor="80"
     style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
    <Button onAction="#handleViewProfile" text="View Profile" AnchorPane.bottomAnchor="50" AnchorPane.rightAnchor="220"
            style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
    <Button onAction="#handleLoadMenu" text="Go Back" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="80"
            style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
</AnchorPane>



