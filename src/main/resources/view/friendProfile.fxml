<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            fx:controller="com.socialapp.socialapp.controller.FriendProfileController"
            xmlns:fx="http://javafx.com/fxml" prefHeight="500"
            prefWidth="500">

    <Label text="Hello!" AnchorPane.topAnchor="120" AnchorPane.leftAnchor="80"
          style="-fx-font-size: 35px; -fx-text-fill: #440941"/>

    <Label text="User Name" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="80"
           style=" -fx-text-fill: black; -fx-font-size: 14px" />
    <Label fx:id="usernameLabel" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="240"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>
    <Label text="Name" AnchorPane.topAnchor="260" AnchorPane.leftAnchor="80"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>
    <Label fx:id="nameLabel" AnchorPane.topAnchor="260" AnchorPane.leftAnchor="240"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>


    <Label text="Email Address" AnchorPane.topAnchor="220" AnchorPane.leftAnchor="80"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>
    <Label fx:id="emailAddressLabel" AnchorPane.topAnchor="220" AnchorPane.leftAnchor="240"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>

    <Label text="Member since" AnchorPane.topAnchor="280" AnchorPane.leftAnchor="80"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>
    <Label fx:id="createdAtLabel" AnchorPane.topAnchor="280" AnchorPane.leftAnchor="240"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>

    <Label text="Last changed" AnchorPane.topAnchor="300" AnchorPane.leftAnchor="80"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>
    <Label fx:id="updatedAtLabel" AnchorPane.topAnchor="300" AnchorPane.leftAnchor="240"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>

    <Label text="Location" AnchorPane.topAnchor="240" AnchorPane.leftAnchor="80"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>
    <Label fx:id="locationLabel" AnchorPane.topAnchor="240" AnchorPane.leftAnchor="240"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>

    <Label text="About" AnchorPane.topAnchor="320" AnchorPane.leftAnchor="80"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>
    <Label fx:id="aboutLabel" AnchorPane.topAnchor="320" AnchorPane.leftAnchor="240"
           style=" -fx-text-fill: black; -fx-font-size: 14px"/>


    <ImageView fx:id="myImageview" AnchorPane.topAnchor="50" AnchorPane.rightAnchor="20"/>

    <Button onAction="#handleLoadMenu" text="Back" AnchorPane.topAnchor="400" AnchorPane.leftAnchor="80"
            style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
</AnchorPane>
