<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.control.PasswordField?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.socialapp.socialapp.controller.RegisterController"
          xmlns="http://javafx.com/javafx" alignment="CENTER"
          hgap="10" vgap="10">

    <Text text="Create an account" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="Full Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Username" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Location" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="locationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Password" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Confirm Password" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Email" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="About Me" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextArea fx:id="aboutTextArea" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Button text="Register" GridPane.rowIndex="8" GridPane.columnIndex="0" onAction="#handleRegistration"
            style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #440941"/>
    <Button text="Login" GridPane.rowIndex="8" GridPane.columnIndex="1" onAction="#handleLoadLogin"
            style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: purple"/>

    <Label fx:id="notificationLabel" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

</GridPane>
