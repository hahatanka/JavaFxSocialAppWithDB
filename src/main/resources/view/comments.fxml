<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            fx:controller="com.socialapp.socialapp.controller.commentController"
            xmlns:fx="http://javafx.com/fxml" prefHeight="500"
            prefWidth="500">

    <Label text="Original post:" AnchorPane.topAnchor="80" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="100"
           style=" -fx-text-fill: #440941; -fx-font-size: 17px"/>
    <Text fx:id="postText" AnchorPane.topAnchor="130" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="180"
          style=" -fx-text-fill: #440941; -fx-font-weight: italic;-fx-font-size: 20px"/>
    <ListView fx:id="commentList" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100" maxHeight="200" maxWidth="300"
              style="-fx-background-color: #440941; -fx-selection-bar:#440941; -fx-text-fill: #440941; -fx-font-size: 14px"/>
    <TextArea fx:id="commentText" AnchorPane.topAnchor="450" AnchorPane.rightAnchor="150" AnchorPane.leftAnchor="150"
            style="-fx-background-color: #440941; -fx-text-fill: black; -fx-font-size: 14px"/>
    <Button onAction="#handleAddComment" text="Add a Comment" AnchorPane.bottomAnchor="120" AnchorPane.rightAnchor="50"
            style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
    <Button onAction="#handleLoadMenu" text="Go Back" AnchorPane.bottomAnchor="120" AnchorPane.leftAnchor="50"
            style="-fx-background-color: #440941; -fx-text-fill: white; -fx-font-size: 14px"/>
</AnchorPane>

